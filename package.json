{
    "name": "@slimio/gitlab",
    "version": "1.0.0",
    "description": "Download and extract gitlab repository",
    "main": "index.js",
    "scripts": {
        "start": "node index.js",
        "prepublishOnly": "pkg-ok",
        "doc": "jsdoc -c ./jsdoc.json -r -R ./README.md -P ./package.json --verbose",
        "test": "cross-env psp && jest --coverage",
        "coverage": "codecov"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/SlimIO/gitlab.git"
    },
    "keywords": [
        "SlimIO",
        "gitlab"
    ],
    "files": [
        "index.d.ts"
    ],
    "author": "SlimIO",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/SlimIO/gitlab/issues"
    },
    "homepage": "https://github.com/SlimIO/gitlab#readme",
    "dependencies": {
        "@slimio/is": "^1.5.1",
        "follow-redirects": "^1.11.0",
        "tar-fs": "^2.1.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^12.1.4",
        "@commitlint/config-conventional": "^8.3.4",
        "@escommunity/minami": "^1.0.0",
        "@slimio/eslint-config": "^4.1.0",
        "@slimio/psp": "^0.11.1",
        "codecov": "^3.7.0",
        "cross-env": "^7.0.2",
        "eslint": "^7.0.0",
        "husky": "^4.2.5",
        "jest": "^26.0.1",
        "jsdoc": "^3.6.4",
        "pkg-ok": "^2.3.1"
    },
    "jest": {
        "setupFilesAfterEnv": [
            "./jest.setup.js"
        ],
        "collectCoverageFrom": [
            "index.js",
            "**/src/**/*.js"
        ],
        "testEnvironment": "node",
        "testMatch": [
            "**/test/**/*.js"
        ],
        "testPathIgnorePatterns": [
            "/node_modules/",
            "/test/fixtures/"
        ]
    },
    "engines": {
        "node": ">=12"
    },
    "husky": {
        "hooks": {
            "pre-push": "cross-env eslint index.js && npm test",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "nyc": {
        "check-coverage": true,
        "per-file": false,
        "lines": 98,
        "statements": 98,
        "functions": 98,
        "branches": 90
    }
}
